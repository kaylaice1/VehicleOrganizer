@model VehicleOrganizer.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<h2>Edit Vehicle</h2>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Make">Make</label>
        <input type="text" class="form-control" id="Make" asp-for="Make" required />
    </div>
    <div class="form-group">
        <label for="Model">Model</label>
        <input type="text" class="form-control" id="Model" asp-for="Model" required />
    </div>
    <div class="form-group">
        <label for="Color">Color</label>
        <input type="text" class="form-control" id="Color" asp-for="Color" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Cancel</a>
